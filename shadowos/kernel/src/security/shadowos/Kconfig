# ShadowOS Security Modules Kconfig

menuconfig SHADOWOS_SECURITY
	bool "ShadowOS Security Modules"
	depends on SHADOWOS
	help
	  Hardware and storage security modules for ShadowOS.

if SHADOWOS_SECURITY

config SHADOWOS_USB
	bool "USB Firewall"
	depends on USB
	default y
	help
	  USB device firewall with whitelist/blacklist support.
	  Blocks mass storage and BadUSB attacks.

config SHADOWOS_AV
	bool "Audio/Video Kill Switch"
	default y
	help
	  Kernel-level camera and microphone kill switch.

config SHADOWOS_SHRED
	bool "Secure Shred"
	default y
	help
	  Military-grade secure file deletion with multi-pass overwrite.

config SHADOWOS_RAM
	bool "RAM Security"
	default y
	help
	  RAM scrubbing and cold boot attack protection.

config SHADOWOS_PANIC
	bool "Panic Button"
	depends on INPUT
	default y
	help
	  Emergency wipe triggered by key combination.

config SHADOWOS_CLOAK
	bool "Process Cloaking"
	default y
	help
	  Hide processes from /proc and ps.

config SHADOWOS_META
	bool "Metadata Scrubbing"
	default y
	help
	  Automatic file metadata scrubbing (timestamps, EXIF, etc).
	  Anti-forensic file sanitization.

config SHADOWOS_HONEY
	bool "Honeytokens"
	default y
	help
	  Decoy files that alert when accessed.

config SHADOWOS_INFINITE
	bool "Infinite Depth Illusion"
	default m
	help
	  Fake endless filesystems to waste attacker time.

config SHADOWOS_DEADMAN
	bool "Dead Man's Switch"
	default m
	help
	  Require periodic check-ins or trigger action.

config SHADOWOS_TIMELOCK
	bool "Time-Locked Secrets"
	default m
	help
	  Data accessible only at certain times.

endif # SHADOWOS_SECURITY
