# ShadowOS Security Modules Kconfig

menuconfig SHADOWOS_SECURITY
	bool "ShadowOS Security Modules"
	depends on SHADOWOS
	help
	  Hardware and storage security modules for ShadowOS.

if SHADOWOS_SECURITY

config SHADOWOS_USB
	bool "USB Firewall"
	depends on USB
	default y
	help
	  USB device firewall with whitelist/blacklist support.
	  Blocks mass storage and BadUSB attacks.

config SHADOWOS_AV
	bool "Audio/Video Kill Switch"
	default y
	help
	  Kernel-level camera and microphone kill switch.

config SHADOWOS_BT
	bool "Bluetooth Control"
	default y
	help
	  Bluetooth kill switch and connection control.

config SHADOWOS_DMA
	bool "DMA Attack Protection"
	depends on PCI
	default y
	help
	  Block Thunderbolt, FireWire, and other DMA attack vectors.
	  Enforces IOMMU restrictions.

config SHADOWOS_SHRED
	bool "Secure Shred"
	default y
	help
	  Military-grade secure file deletion with multi-pass overwrite.

config SHADOWOS_RAM
	bool "RAM Security"
	default y
	help
	  RAM scrubbing and cold boot attack protection.

config SHADOWOS_PANIC
	bool "Panic Button"
	depends on INPUT
	default y
	help
	  Emergency wipe triggered by key combination.

config SHADOWOS_CLOAK
	bool "Process Cloaking"
	default y
	help
	  Hide processes from /proc and ps.

config SHADOWOS_META
	bool "Metadata Scrubbing"
	default y
	help
	  Automatic file metadata scrubbing (timestamps, EXIF, etc).
	  Anti-forensic file sanitization.

config SHADOWOS_HONEY
	bool "Honeytokens"
	default y
	help
	  Decoy files that alert when accessed.

config SHADOWOS_ROOTKIT
	bool "Rootkit Detection"
	default y
	help
	  Detect hidden kernel modules and function hooks.
	  Kernel integrity monitoring.

config SHADOWOS_BEACON
	bool "Beacon Detection"
	depends on NETFILTER
	default m
	help
	  Detect C2 beacon patterns and periodic connections.
	  Command and control communication detection.

config SHADOWOS_EXFIL
	bool "Exfiltration Detection"
	depends on NETFILTER
	default m
	help
	  Detect data exfiltration and DNS tunneling.
	  Data leak prevention.

config SHADOWOS_COLDBOOT
	bool "Cold Boot Protection"
	default y
	help
	  Memory wiping on shutdown/suspend to prevent cold boot attacks.
	  Memory scrambling and encryption.

config SHADOWOS_TAMPER
	bool "Tamper Detection"
	depends on DMI
	default y
	help
	  Evil maid attack detection via hardware fingerprinting.
	  BIOS/UEFI modification alerts.

config SHADOWOS_SIGN
	bool "Module Signing Verification"
	default y
	help
	  Verify kernel module signatures and block unsigned modules.
	  Certificate management.

config SHADOWOS_DEFCON
	bool "DEFCON Levels"
	default y
	help
	  Security posture management with 5 threat levels.
	  Auto-apply security settings based on threat level.

config SHADOWOS_EVIDENCE
	bool "Evidence Preservation"
	depends on CRYPTO_SHA256
	default m
	help
	  Tamper-resistant forensic logging with hash chain integrity.
	  Chain of custody support.

config SHADOWOS_INFINITE
	bool "Infinite Depth Illusion"
	default m
	help
	  Fake endless filesystems to waste attacker time.

config SHADOWOS_DEADMAN
	bool "Dead Man's Switch"
	default m
	help
	  Require periodic check-ins or trigger action.

config SHADOWOS_TIMELOCK
	bool "Time-Locked Secrets"
	default m
	help
	  Data accessible only at certain times.

endif # SHADOWOS_SECURITY

